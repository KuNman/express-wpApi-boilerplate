{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "inlineSourceMap": false,
    "outDir": "dist",
    "baseUrl": "dist",
    "types": ["node"],
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
